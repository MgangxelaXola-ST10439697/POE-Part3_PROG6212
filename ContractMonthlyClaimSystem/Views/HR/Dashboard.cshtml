@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "HR Dashboard";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold">
                <i class="bi bi-person-gear me-2 text-warning"></i>HR Dashboard
            </h2>
            <p class="text-muted">Manage users, generate reports, and oversee system operations</p>
        </div>
        <div class="col-md-4 text-end">
            <div class="btn-group" role="group">
                <a asp-action="ManageUsers" class="btn btn-primary">
                    <i class="bi bi-people me-2"></i>Manage Users
                </a>
                <a asp-action="Reports" class="btn btn-success">
                    <i class="bi bi-file-earmark-bar-graph me-2"></i>Reports
                </a>
            </div>
        </div>
    </div>

    <!-- Statistics Cards -->
    <div class="row g-4 mb-4">
        <div class="col-md-3">
            <div class="stat-card bg-primary text-white">
                <div class="stat-icon"><i class="bi bi-file-earmark-text"></i></div>
                <div class="stat-content">
                    <h3 class="stat-number">@ViewBag.TotalClaims</h3>
                    <p class="stat-label">Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-warning text-dark">
                <div class="stat-icon"><i class="bi bi-clock-history"></i></div>
                <div class="stat-content">
                    <h3 class="stat-number">@ViewBag.PendingClaims</h3>
                    <p class="stat-label">Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-success text-white">
                <div class="stat-icon"><i class="bi bi-check-circle"></i></div>
                <div class="stat-content">
                    <h3 class="stat-number">@ViewBag.ApprovedClaims</h3>
                    <p class="stat-label">Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="stat-card bg-danger text-white">
                <div class="stat-icon"><i class="bi bi-x-circle"></i></div>
                <div class="stat-content">
                    <h3 class="stat-number">@ViewBag.RejectedClaims</h3>
                    <p class="stat-label">Rejected</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Financial Overview -->
    <div class="row g-4 mb-4">
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-cash-stack me-2 text-success"></i>Financial Overview
                    </h5>
                    <div class="mt-3">
                        <div class="d-flex justify-content-between mb-3">
                            <span class="text-muted">Total Amount:</span>
                            <span class="fw-bold fs-5">R @ViewBag.TotalAmount.ToString("N2")</span>
                        </div>
                        <div class="d-flex justify-content-between">
                            <span class="text-muted">Approved Amount:</span>
                            <span class="fw-bold fs-5 text-success">R @ViewBag.ApprovedAmount.ToString("N2")</span>
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <div class="col-md-6">
            <div class="card border-0 shadow-sm">
                <div class="card-body">
                    <h5 class="card-title">
                        <i class="bi bi-graph-up me-2 text-primary"></i>Quick Actions
                    </h5>
                    <div class="d-grid gap-2 mt-3">
                        <a asp-action="AddUser" class="btn btn-outline-primary">
                            <i class="bi bi-person-plus me-2"></i>Add New User
                        </a>
                        <a asp-action="GenerateCSVReport" class="btn btn-outline-success">
                            <i class="bi bi-download me-2"></i>Download Full Report
                        </a>
                        <a asp-action="GenerateSummaryReport" class="btn btn-outline-info">
                            <i class="bi bi-file-text me-2"></i>Generate Summary
                        </a>
                    </div>
                </div>
            </div>
        </div>
    </div>

    <!-- Recent Claims -->
    <div class="card border-0 shadow-sm">
        <div class="card-header bg-white py-3">
            <h5 class="mb-0">
                <i class="bi bi-clock-history me-2"></i>Recent Claims
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">Claim ID</th>
                                <th>Lecturer</th>
                                <th>Email</th>
                                <th>Amount</th>
                                <th>Date</th>
                                <th>Status</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="px-4 fw-bold text-primary">#@claim.Id</td>
                                    <td>@claim.LecturerName</td>
                                    <td class="text-muted">@claim.LecturerEmail</td>
                                    <td class="fw-bold">R @claim.TotalAmount.ToString("N2")</td>
                                    <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (claim.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">Pending</span>
                                        }
                                        else if (claim.Status == "Approved")
                                        {
                                            <span class="badge bg-success">Approved</span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-danger">Rejected</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox text-muted" style="font-size: 3rem;"></i>
                    <p class="text-muted mt-3">No claims submitted yet</p>
                </div>
            }
        </div>
    </div>
</div>

<style>
    .stat-card {
        border-radius: 1rem;
        padding: 1.5rem;
        display: flex;
        align-items: center;
        gap: 1rem;
        box-shadow: 0 4px 6px rgba(0,0,0,0.1);
        transition: transform 0.3s ease;
    }

        .stat-card:hover {
            transform: translateY(-5px);
        }

    .stat-icon {
        font-size: 2.5rem;
        opacity: 0.8;
    }

    .stat-number {
        font-size: 2rem;
        font-weight: 700;
        margin: 0;
    }

    .stat-label {
        margin: 0;
        opacity: 0.9;
    }
</style>