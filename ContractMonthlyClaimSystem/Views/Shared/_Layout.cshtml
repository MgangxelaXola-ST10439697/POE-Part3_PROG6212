@{
    var userRole = Context.Session.GetString("UserRole");
    var userName = Context.Session.GetString("UserName");
    var isLoggedIn = !string.IsNullOrEmpty(userRole);
}
<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - CMCS</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="https://cdn.jsdelivr.net/npm/bootstrap-icons@1.11.1/font/bootstrap-icons.css">
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-lg navbar-dark bg-dark shadow">
            <div class="container-fluid">
                <a class="navbar-brand fw-bold" asp-controller="Home" asp-action="Index">
                    <i class="bi bi-mortarboard me-2"></i>CMCS
                </a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target="#navbarNav">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="collapse navbar-collapse" id="navbarNav">
                    <ul class="navbar-nav me-auto">
                        <li class="nav-item">
                            <a class="nav-link" asp-controller="Home" asp-action="Index">
                                <i class="bi bi-house me-1"></i>Home
                            </a>
                        </li>

                        @if (userRole == "Lecturer")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="Submit">
                                    <i class="bi bi-plus-circle me-1"></i>Submit Claim
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="MyClaims">
                                    <i class="bi bi-list-check me-1"></i>My Claims
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Documents" asp-action="Upload">
                                    <i class="bi bi-upload me-1"></i>Upload
                                </a>
                            </li>
                        }

                        @if (userRole == "ProgrammeCoordinator")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="PendingReview">
                                    <i class="bi bi-hourglass-split me-1"></i>Pending Review
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="ReviewedClaims">
                                    <i class="bi bi-clock-history me-1"></i>Reviewed
                                </a>
                            </li>
                        }

                        @if (userRole == "AcademicManager")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="ApprovalQueue">
                                    <i class="bi bi-shield-check me-1"></i>Approval Queue
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Claims" asp-action="ApprovedClaims">
                                    <i class="bi bi-clock-history me-1"></i>Processed
                                </a>
                            </li>
                        }

                        @if (userRole == "Admin")
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Dashboard">
                                    <i class="bi bi-speedometer2 me-1"></i>Dashboard
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="UserManagement">
                                    <i class="bi bi-people me-1"></i>Users
                                </a>
                            </li>
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Admin" asp-action="Reports">
                                    <i class="bi bi-file-bar-graph me-1"></i>Reports
                                </a>
                            </li>
                        }
                    </ul>

                    <ul class="navbar-nav">
                        @if (isLoggedIn)
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" href="#" data-bs-toggle="dropdown">
                                    <i class="bi bi-person-circle me-1"></i>@userName
                                    @if (userRole == "Lecturer")
                                    {
                                        <span class="badge bg-info ms-1">Lecturer</span>
                                    }
                                    else if (userRole == "ProgrammeCoordinator")
                                    {
                                        <span class="badge bg-warning text-dark ms-1">Coordinator</span>
                                    }
                                    else if (userRole == "AcademicManager")
                                    {
                                        <span class="badge bg-success ms-1">Manager</span>
                                    }
                                    else if (userRole == "Admin")
                                    {
                                        <span class="badge bg-danger ms-1">HR Admin</span>
                                    }
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end">
                                    <li>
                                        <span class="dropdown-item-text">
                                            <small class="text-muted">Signed in as</small><br>
                                            <strong>@userName</strong>
                                        </span>
                                    </li>
                                    <li><hr class="dropdown-divider"></li>
                                    <li>
                                        <a class="dropdown-item text-danger" asp-controller="Account" asp-action="Logout">
                                            <i class="bi bi-box-arrow-right me-2"></i>Logout
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                        else
                        {
                            <li class="nav-item">
                                <a class="nav-link" asp-controller="Account" asp-action="Login">
                                    <i class="bi bi-box-arrow-in-right me-1"></i>Login
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>

    <main role="main" class="pb-5">
        @RenderBody()
    </main>

    <footer class="footer mt-auto py-3 bg-light border-top">
        <div class="container text-center">
            <span class="text-muted">
                &copy; @DateTime.Now.Year Contract Monthly Claim System | PROG6212 POE Part 3
            </span>
        </div>
    </footer>

    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>