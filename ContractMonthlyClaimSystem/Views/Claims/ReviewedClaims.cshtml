@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Approval Queue";
    var userName = Context.Session.GetString("UserName") ?? "Academic Manager";
}

<div class="container-fluid mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold">
                <i class="bi bi-shield-check me-2 text-success"></i>Academic Manager - Final Approval
            </h2>
            <p class="text-muted">Welcome, @userName - Claims approved by Programme Coordinator</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="ApprovedClaims" class="btn btn-outline-secondary">
                <i class="bi bi-clock-history me-2"></i>View Processed Claims
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Stats -->
    <div class="row g-3 mb-4">
        <div class="col-md-4">
            <div class="card border-0 shadow-sm bg-info bg-opacity-10">
                <div class="card-body text-center">
                    <h2 class="text-info">@Model.Count()</h2>
                    <p class="mb-0">Awaiting Final Approval</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h2 class="text-primary">R @Model.Sum(c => c.TotalAmount).ToString("N2")</h2>
                    <p class="mb-0">Total Value Pending</p>
                </div>
            </div>
        </div>
        <div class="col-md-4">
            <div class="card border-0 shadow-sm">
                <div class="card-body text-center">
                    <h2 class="text-secondary">@Model.Sum(c => c.HoursWorked)</h2>
                    <p class="mb-0">Total Hours</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Info Alert -->
    <div class="alert alert-info shadow-sm">
        <i class="bi bi-info-circle me-2"></i>
        <strong>Note:</strong> These claims have already been reviewed and approved by the Programme Coordinator.
        Your approval is the final step before payment processing.
    </div>

    <!-- Claims Table -->
    <div class="card border-0 shadow">
        <div class="card-header bg-success text-white py-3">
            <h5 class="mb-0">
                <i class="bi bi-check2-square me-2"></i>Claims Awaiting Final Approval
            </h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">ID</th>
                                <th>Lecturer</th>
                                <th>Email</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total</th>
                                <th>Submitted</th>
                                <th>Document</th>
                                <th class="text-center">Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="px-4 fw-bold text-primary">#@claim.ClaimId</td>
                                    <td>
                                        <div class="d-flex align-items-center">
                                            <div class="bg-success text-white rounded-circle d-flex align-items-center justify-content-center me-2"
                                                 style="width:35px;height:35px;">
                                                @claim.LecturerName?.Substring(0, 1).ToUpper()
                                            </div>
                                            @claim.LecturerName
                                        </div>
                                    </td>
                                    <td class="text-muted">@claim.LecturerEmail</td>
                                    <td>
                                        @claim.HoursWorked hrs
                                        @if (claim.HoursWorked > 160)
                                        {
                                            <span class="badge bg-warning text-dark ms-1" title="Above average hours">
                                                <i class="bi bi-exclamation-triangle"></i>
                                            </span>
                                        }
                                    </td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td class="fw-bold text-success">R @claim.TotalAmount.ToString("N2")</td>
                                    <td>@claim.DateSubmitted.ToString("dd MMM yyyy")</td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.FilePath))
                                        {
                                            <a href="@claim.FilePath" target="_blank" class="btn btn-sm btn-outline-info">
                                                <i class="bi bi-file-earmark-pdf me-1"></i>View
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">No File</span>
                                        }
                                    </td>
                                    <td class="text-center">
                                        <div class="btn-group" role="group">
                                            <form asp-action="ManagerApprove" method="post" class="d-inline">
                                                @Html.AntiForgeryToken()
                                                <input type="hidden" name="id" value="@claim.ClaimId" />
                                                <button type="submit" class="btn btn-success btn-sm"
                                                        onclick="return confirm('Give final approval for this claim?')">
                                                    <i class="bi bi-check-all me-1"></i>Final Approve
                                                </button>
                                            </form>
                                            <button type="button" class="btn btn-danger btn-sm"
                                                    data-bs-toggle="modal" data-bs-target="#rejectModal@(claim.ClaimId)">
                                                <i class="bi bi-x-circle me-1"></i>Reject
                                            </button>
                                        </div>
                                    </td>
                                </tr>

                                <!-- Reject Modal -->
                                <div class="modal fade" id="rejectModal@(claim.ClaimId)" tabindex="-1">
                                    <div class="modal-dialog">
                                        <div class="modal-content">
                                            <div class="modal-header bg-danger text-white">
                                                <h5 class="modal-title">
                                                    <i class="bi bi-x-octagon me-2"></i>Reject Claim #@claim.ClaimId
                                                </h5>
                                                <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal"></button>
                                            </div>
                                            <form asp-action="ManagerReject" method="post">
                                                @Html.AntiForgeryToken()
                                                <div class="modal-body">
                                                    <input type="hidden" name="id" value="@claim.ClaimId" />

                                                    <div class="alert alert-warning">
                                                        <i class="bi bi-exclamation-triangle me-2"></i>
                                                        This claim was approved by the Programme Coordinator.
                                                    </div>

                                                    <p><strong>Lecturer:</strong> @claim.LecturerName</p>
                                                    <p><strong>Amount:</strong> R @claim.TotalAmount.ToString("N2")</p>

                                                    <div class="mb-3">
                                                        <label class="form-label fw-semibold">
                                                            Rejection Reason <span class="text-danger">*</span>
                                                        </label>
                                                        <textarea name="reason" class="form-control" rows="4" required
                                                          placeholder="Please provide a reason for overriding the coordinator's approval..."></textarea>
                                                    </div>
                                                </div>
                                                <div class="modal-footer">
                                                    <button type="button" class="btn btn-secondary" data-bs-dismiss="modal">Cancel</button>
                                                    <button type="submit" class="btn btn-danger">
                                                        <i class="bi bi-x-circle me-1"></i>Confirm Rejection
                                                    </button>
                                                </div>
                                            </form>
                                        </div>
                                    </div>
                                </div>
                            }
                        </tbody>
                        <tfoot class="table-light">
                            <tr>
                                <td colspan="5" class="text-end px-4"><strong>Total Pending Approval:</strong></td>
                                <td class="fw-bold text-success">R @Model.Sum(c => c.TotalAmount).ToString("N2")</td>
                                <td colspan="3"></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-check-circle display-1 text-success"></i>
                    <h4 class="mt-3 text-muted">No Pending Approvals</h4>
                    <p class="text-muted">All claims have been processed.</p>
                </div>
            }
        </div>
    </div>

    <!-- Info Card -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-body">
            <h6 class="fw-bold"><i class="bi bi-info-circle me-2"></i>Your Responsibilities as Academic Manager</h6>
            <ul class="mb-0">
                <li>Provide final approval for claims already reviewed by Programme Coordinator</li>
                <li>Verify that claims comply with institutional policies and budgets</li>
                <li>Approved claims will proceed to HR for payment processing</li>
                <li>You may reject claims that don't meet academic standards even if pre-approved</li>
            </ul>
        </div>
    </div>
</div>