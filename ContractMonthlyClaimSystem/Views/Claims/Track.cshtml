@model IEnumerable<ContractMonthlyClaimSystem.Models.Claim>

@{
    ViewData["Title"] = "Track Claims";
    var userName = Context.Session.GetString("UserName") ?? "Lecturer";
}

<div class="container mt-4">
    <!-- Header -->
    <div class="row mb-4">
        <div class="col-md-8">
            <h2 class="fw-bold">
                <i class="bi bi-file-earmark-text me-2 text-primary"></i>My Claims
            </h2>
            <p class="text-muted">Welcome, @userName - Track your submitted claims</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Submit" class="btn btn-primary btn-lg">
                <i class="bi bi-plus-circle me-2"></i>Submit New Claim
            </a>
        </div>
    </div>

    <!-- Alerts -->
    @if (TempData["SuccessMessage"] != null)
    {
        <div class="alert alert-success alert-dismissible fade show shadow-sm">
            <i class="bi bi-check-circle-fill me-2"></i>@TempData["SuccessMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    @if (TempData["ErrorMessage"] != null)
    {
        <div class="alert alert-danger alert-dismissible fade show shadow-sm">
            <i class="bi bi-exclamation-triangle-fill me-2"></i>@TempData["ErrorMessage"]
            <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
        </div>
    }

    <!-- Statistics Cards -->
    <div class="row g-3 mb-4">
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100">
                <div class="card-body text-center">
                    <div class="display-6 text-primary">@Model.Count()</div>
                    <p class="text-muted mb-0">Total Claims</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-warning border-4">
                <div class="card-body text-center">
                    <div class="display-6 text-warning">@Model.Count(c => c.Status.Contains("Pending") || c.Status == "Coordinator Approved")</div>
                    <p class="text-muted mb-0">In Progress</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-success border-4">
                <div class="card-body text-center">
                    <div class="display-6 text-success">@Model.Count(c => c.Status == "Manager Approved")</div>
                    <p class="text-muted mb-0">Approved</p>
                </div>
            </div>
        </div>
        <div class="col-md-3">
            <div class="card border-0 shadow-sm h-100 border-start border-danger border-4">
                <div class="card-body text-center">
                    <div class="display-6 text-danger">@Model.Count(c => c.Status.Contains("Rejected"))</div>
                    <p class="text-muted mb-0">Rejected</p>
                </div>
            </div>
        </div>
    </div>

    <!-- Claims Table -->
    <div class="card border-0 shadow">
        <div class="card-header bg-primary text-white py-3">
            <h5 class="mb-0"><i class="bi bi-list-ul me-2"></i>All My Claims</h5>
        </div>
        <div class="card-body p-0">
            @if (Model.Any())
            {
                <div class="table-responsive">
                    <table class="table table-hover mb-0">
                        <thead class="table-light">
                            <tr>
                                <th class="px-4">Claim ID</th>
                                <th>Date Submitted</th>
                                <th>Hours</th>
                                <th>Rate</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Progress</th>
                                <th>Document</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td class="px-4 fw-bold text-primary">#@claim.Id</td>
                                    <td>
                                        @claim.DateSubmitted.ToString("dd MMM yyyy")
                                        <br><small class="text-muted">@claim.DateSubmitted.ToString("HH:mm")</small>
                                    </td>
                                    <td>@claim.HoursWorked hrs</td>
                                    <td>R @claim.HourlyRate.ToString("N2")</td>
                                    <td class="fw-bold">R @claim.TotalAmount.ToString("N2")</td>
                                    <td>
                                        @if (claim.Status == "Pending")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock me-1"></i>Pending Review
                                            </span>
                                        }
                                        else if (claim.Status == "Coordinator Approved")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-check me-1"></i>Coordinator Approved
                                            </span>
                                        }
                                        else if (claim.Status == "Manager Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-all me-1"></i>Fully Approved
                                            </span>
                                        }
                                        else if (claim.Status.Contains("Rejected"))
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle me-1"></i>@claim.Status
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@claim.Status</span>
                                        }
                                    </td>
                                    <td style="min-width: 150px;">
                                        @{
                                            int progress = 25;
                                            string progressClass = "bg-warning";
                                            if (claim.Status == "Coordinator Approved") { progress = 50; progressClass = "bg-info"; }
                                            else if (claim.Status == "Manager Approved") { progress = 100; progressClass = "bg-success"; }
                                            else if (claim.Status.Contains("Rejected")) { progress = 100; progressClass = "bg-danger"; }
                                        }
                                        <div class="progress" style="height: 8px;">
                                            <div class="progress-bar @progressClass" style="width: @progress%"></div>
                                        </div>
                                        <small class="text-muted">
                                            @if (claim.Status == "Pending")
                                            {
                                                <text>Awaiting Coordinator</text>
                                            }
                                            else if (claim.Status == "Coordinator Approved")
                                            {

                                                <text>Awaiting Manager</text>
                                            }
                                            else if (claim.Status == "Manager Approved")
                                            {

                                                <text>Complete</text>
                                            }
                                            else if (claim.Status.Contains("Rejected"))
                                            {

                                                <text>Rejected</text>
                                            }
                                        </small>
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrEmpty(claim.FilePath))
                                        {
                                            <a href="@claim.FilePath" target="_blank" class="btn btn-sm btn-outline-primary">
                                                <i class="bi bi-download"></i>
                                            </a>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                                @if (!string.IsNullOrEmpty(claim.Notes) && claim.Status.Contains("Rejected"))
                                {
                                    <tr class="table-danger">
                                        <td colspan="8" class="px-4">
                                            <small><strong>Rejection Reason:</strong> @claim.Notes</small>
                                        </td>
                                    </tr>
                                }
                            }
                        </tbody>
                    </table>
                </div>
            }
            else
            {
                <div class="text-center py-5">
                    <i class="bi bi-inbox display-1 text-muted"></i>
                    <h4 class="mt-3 text-muted">No Claims Yet</h4>
                    <p class="text-muted">You haven't submitted any claims.</p>
                    <a asp-action="Submit" class="btn btn-primary mt-2">
                        <i class="bi bi-plus-circle me-2"></i>Submit Your First Claim
                    </a>
                </div>
            }
        </div>
    </div>

    <!-- Legend -->
    <div class="card border-0 shadow-sm mt-4">
        <div class="card-body">
            <h6 class="fw-bold mb-3"><i class="bi bi-info-circle me-2"></i>Approval Workflow</h6>
            <div class="row text-center">
                <div class="col">
                    <div class="badge bg-warning text-dark p-2 mb-2">1. Pending</div>
                    <p class="small mb-0">Submitted, awaiting Programme Coordinator</p>
                </div>
                <div class="col-auto"><i class="bi bi-arrow-right text-muted"></i></div>
                <div class="col">
                    <div class="badge bg-info p-2 mb-2">2. Coordinator Approved</div>
                    <p class="small mb-0">Approved, awaiting Academic Manager</p>
                </div>
                <div class="col-auto"><i class="bi bi-arrow-right text-muted"></i></div>
                <div class="col">
                    <div class="badge bg-success p-2 mb-2">3. Manager Approved</div>
                    <p class="small mb-0">Fully approved for payment</p>
                </div>
            </div>
        </div>
    </div>
</div>