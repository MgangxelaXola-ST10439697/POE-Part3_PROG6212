@model IEnumerable<ContractMonthlyClaimSystem.Models.WorkClaim>

@{
    ViewData["Title"] = "CM Review List";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>
                <i class="bi bi-building"></i> Construction Manager - Claims Review
            </h2>
            <p class="text-muted">Final review of project manager decisions</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="CmNotifications" class="btn btn-outline-primary">
                <i class="bi bi-bell"></i> Notifications
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-success">
            <i class="bi bi-check-circle-fill"></i>
            <strong>All clear!</strong> No claims awaiting CM review at this time.
        </div>
    }
    else
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i>
            You have <strong>@Model.Count()</strong> claim(s) to review.
        </div>

        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Worker</th>
                                <th>Department</th>
                                <th>Rate</th>
                                <th>Jobs</th>
                                <th>Total</th>
                                <th>PM Status</th>
                                <th>Reject Reason</th>
                                <th>Actions</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr class="@(claim.Status == "PM Rejected" && string.IsNullOrWhiteSpace(claim.RejectReason) ? "table-warning" : "")">
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.CreatedAt.ToString("dd MMM")</td>
                                    <td>@claim.Name @claim.Surname</td>
                                    <td>
                                        <span class="badge bg-secondary">@claim.Department</span>
                                    </td>
                                    <td>R @claim.RatePerJob.ToString("N2")</td>
                                    <td>@claim.NumberOfJobs</td>
                                    <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (claim.Status == "PM Approved")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-check-circle"></i> PM Approved
                                            </span>
                                        }
                                        else if (claim.Status == "PM Rejected")
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> PM Rejected
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@claim.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(claim.RejectReason))
                                        {
                                            <span class="text-muted"
                                                  data-bs-toggle="tooltip"
                                                  title="@claim.RejectReason">
                                                <i class="bi bi-file-text"></i> View
                                            </span>
                                        }
                                        else if (claim.Status == "PM Rejected")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-exclamation-triangle"></i> No reason
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                    <td>
                                        @if (claim.Status == "PM Approved")
                                        {
                                            <div class="btn-group" role="group">
                                                <a asp-action="CmApprove" asp-route-id="@claim.Id"
                                                   class="btn btn-sm btn-success"
                                                   onclick="return confirm('Approve this claim for payment?')">
                                                    <i class="bi bi-check-circle"></i> Approve
                                                </a>
                                                <a asp-action="CmReject" asp-route-id="@claim.Id"
                                                   class="btn btn-sm btn-danger">
                                                    <i class="bi bi-x-circle"></i> Reject
                                                </a>
                                            </div>
                                        }
                                        else if (claim.Status == "PM Rejected" && string.IsNullOrWhiteSpace(claim.RejectReason))
                                        {
                                            <span class="text-warning small">
                                                <i class="bi bi-hourglass-split"></i> Awaiting PM reason
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="text-muted small">Already reviewed</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                        <tfoot>
                            <tr class="table-light">
                                <td colspan="6" class="text-end"><strong>Total Amount:</strong></td>
                                <td colspan="4"><strong>R @Model.Sum(c => c.TotalAmount).ToString("N2")</strong></td>
                            </tr>
                        </tfoot>
                    </table>
                </div>
            </div>
        </div>

        <div class="row mt-4">
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="text-info">@Model.Count(c => c.Status == "PM Approved")</h5>
                        <p class="text-muted mb-0">PM Approved</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="text-danger">@Model.Count(c => c.Status == "PM Rejected")</h5>
                        <p class="text-muted mb-0">PM Rejected</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card text-center">
                    <div class="card-body">
                        <h5 class="text-warning">@Model.Count(c => c.Status == "PM Rejected" && string.IsNullOrWhiteSpace(c.RejectReason))</h5>
                        <p class="text-muted mb-0">Missing Reason</p>
                    </div>
                </div>
            </div>
        </div>
    }
</div>

@section Scripts {
    <script>
        // Initialize Bootstrap tooltips
        var tooltipTriggerList = [].slice.call(document.querySelectorAll('[data-bs-toggle="tooltip"]'))
        var tooltipList = tooltipTriggerList.map(function (tooltipTriggerEl) {
            return new bootstrap.Tooltip(tooltipTriggerEl)
        })
    </script>
}