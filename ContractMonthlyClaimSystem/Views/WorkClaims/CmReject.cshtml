@model ContractMonthlyClaimSystem.Models.WorkClaim

@{
    ViewData["Title"] = "CM Reject Claim";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">
                <i class="bi bi-x-octagon text-danger"></i> Construction Manager - Reject Claim #@Model.Id
            </h2>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-file-earmark-text"></i> Claim Summary
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Worker:</strong> @Model.Name @Model.Surname</p>
                            <p><strong>Department:</strong> <span class="badge bg-secondary">@Model.Department</span></p>
                            <p><strong>Rate per Job:</strong> R @Model.RatePerJob.ToString("N2")</p>
                            <p><strong>Number of Jobs:</strong> @Model.NumberOfJobs</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Total Amount:</strong> <span class="fs-4 text-danger">R @Model.TotalAmount.ToString("N2")</span></p>
                            <p><strong>Submitted:</strong> @Model.CreatedAt.ToString("dd MMM yyyy")</p>
                            <p>
                                <strong>Current Status:</strong>
                                @if (Model.Status == "PM Approved")
                                {
                                    <span class="badge bg-info">@Model.Status</span>
                                }
                                else
                                {
                                    <span class="badge bg-danger">@Model.Status</span>
                                }
                            </p>
                        </div>
                    </div>

                    @if (!string.IsNullOrWhiteSpace(Model.RejectReason))
                    {
                        <hr>
                        <div class="alert alert-warning mb-0">
                            <strong><i class="bi bi-info-circle"></i> PM Rejection Reason:</strong>
                            <p class="mb-0 mt-2">@Model.RejectReason</p>
                        </div>
                    }
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-octagon"></i> CM Rejection Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="CmRejectConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-info">
                            <i class="bi bi-info-circle"></i>
                            <strong>Construction Manager Final Review:</strong>
                            You are about to reject this claim at the CM level. The rejection reason is optional.
                        </div>

                        <div class="mb-3">
                            <label for="rejectReason" class="form-label">
                                <strong>CM Rejection Reason</strong> (Optional)
                            </label>
                            <textarea name="rejectReason"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Provide additional context for CM-level rejection...

Examples:
- Conflicts with construction schedule
- Budget constraints
- Safety compliance issues
- Site access limitations
- Quality standards not met"></textarea>
                            <small class="form-text text-muted">
                                <i class="bi bi-lightbulb"></i>
                                This reason will be added to any existing PM rejection reason.
                            </small>
                        </div>

                        <div class="card mb-3">
                            <div class="card-body">
                                <h6><i class="bi bi-info-circle"></i> Impact of CM Rejection:</h6>
                                <ul class="mb-0">
                                    <li>Claim status changes to "CM Rejected"</li>
                                    <li>Worker will see both PM and CM rejection reasons (if provided)</li>
                                    <li>Claim will not proceed to payment</li>
                                    <li>HR will have visibility of this decision</li>
                                </ul>
                            </div>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="CmReviewList" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-x-octagon"></i> Confirm CM Rejection
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}