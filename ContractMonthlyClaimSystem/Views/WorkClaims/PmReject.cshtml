@model ContractMonthlyClaimSystem.Models.WorkClaim

@{
    ViewData["Title"] = "Reject Claim";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-8">
            <h2 class="mb-4">
                <i class="bi bi-x-circle text-danger"></i> Reject Claim #@Model.Id
            </h2>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-light">
                    <h5 class="mb-0">
                        <i class="bi bi-info-circle"></i> Claim Details
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-6">
                            <p><strong>Worker:</strong> @Model.Name @Model.Surname</p>
                            <p><strong>Department:</strong> <span class="badge bg-secondary">@Model.Department</span></p>
                            <p><strong>Rate per Job:</strong> R @Model.RatePerJob.ToString("N2")</p>
                        </div>
                        <div class="col-md-6">
                            <p><strong>Number of Jobs:</strong> @Model.NumberOfJobs</p>
                            <p><strong>Total Amount:</strong> <span class="text-success fs-5">R @Model.TotalAmount.ToString("N2")</span></p>
                            <p><strong>Submitted:</strong> @Model.CreatedAt.ToString("dd MMM yyyy HH:mm")</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-danger text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-exclamation-triangle"></i> Rejection Form
                    </h5>
                </div>
                <div class="card-body">
                    <form asp-action="PmRejectConfirmed" method="post">
                        <input type="hidden" asp-for="Id" />

                        <div class="alert alert-warning">
                            <i class="bi bi-info-circle"></i>
                            <strong>Important:</strong> Providing a rejection reason is optional but recommended.
                            If you don't provide one now, the Construction Manager may request it later,
                            and you'll receive a notification.
                        </div>

                        <div class="mb-3">
                            <label for="rejectReason" class="form-label">
                                <strong>Rejection Reason</strong> (Optional)
                            </label>
                            <textarea name="rejectReason"
                                      class="form-control"
                                      rows="5"
                                      placeholder="Provide a detailed reason for rejecting this claim...
Example: Insufficient documentation, incorrect job count, work quality issues, etc."></textarea>
                            <small class="form-text text-muted">
                                <i class="bi bi-lightbulb"></i>
                                A clear reason helps the worker understand the rejection and resubmit correctly.
                            </small>
                        </div>

                        <div class="alert alert-info">
                            <i class="bi bi-question-circle"></i>
                            <strong>What happens next?</strong>
                            <ul class="mb-0 mt-2">
                                <li>Claim status will change to "PM Rejected"</li>
                                <li>Worker will see the rejection in their claims list</li>
                                <li>If no reason provided, CM may request one</li>
                            </ul>
                        </div>

                        <div class="d-grid gap-2 d-md-flex justify-content-md-between">
                            <a asp-action="PmPending" class="btn btn-secondary">
                                <i class="bi bi-arrow-left"></i> Cancel
                            </a>
                            <button type="submit" class="btn btn-danger btn-lg">
                                <i class="bi bi-x-circle"></i> Confirm Rejection
                            </button>
                        </div>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}