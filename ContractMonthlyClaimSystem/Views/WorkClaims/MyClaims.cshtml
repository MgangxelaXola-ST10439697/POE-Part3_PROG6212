@model IEnumerable<ContractMonthlyClaimSystem.Models.WorkClaim>

@{
    ViewData["Title"] = "My Claims";
}

<div class="container">
    <div class="row mb-4">
        <div class="col-md-8">
            <h2>My Work Claims</h2>
            <p class="text-muted">View all your submitted claims and their status</p>
        </div>
        <div class="col-md-4 text-end">
            <a asp-action="Create" class="btn btn-primary">
                <i class="bi bi-plus-circle"></i> Submit New Claim
            </a>
        </div>
    </div>

    @if (!Model.Any())
    {
        <div class="alert alert-info">
            <i class="bi bi-info-circle"></i> You have not submitted any claims yet.
            <a asp-action="Create" class="alert-link">Submit your first claim here</a>.
        </div>
    }
    else
    {
        <div class="card shadow-sm">
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-hover">
                        <thead class="table-light">
                            <tr>
                                <th>ID</th>
                                <th>Date</th>
                                <th>Department</th>
                                <th>Rate per Job</th>
                                <th>Jobs</th>
                                <th>Total Amount</th>
                                <th>Status</th>
                                <th>Reject Reason</th>
                            </tr>
                        </thead>
                        <tbody>
                            @foreach (var claim in Model)
                            {
                                <tr>
                                    <td><strong>#@claim.Id</strong></td>
                                    <td>@claim.CreatedAt.ToString("dd MMM yyyy")</td>
                                    <td>@claim.Department</td>
                                    <td>R @claim.RatePerJob.ToString("N2")</td>
                                    <td>@claim.NumberOfJobs</td>
                                    <td><strong>R @claim.TotalAmount.ToString("N2")</strong></td>
                                    <td>
                                        @if (claim.Status == "Submitted")
                                        {
                                            <span class="badge bg-warning text-dark">
                                                <i class="bi bi-clock"></i> @claim.Status
                                            </span>
                                        }
                                        else if (claim.Status == "PM Approved")
                                        {
                                            <span class="badge bg-info">
                                                <i class="bi bi-check-circle"></i> @claim.Status
                                            </span>
                                        }
                                        else if (claim.Status == "CM Approved")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-check-circle-fill"></i> @claim.Status
                                            </span>
                                        }
                                        else if (claim.Status == "Paid")
                                        {
                                            <span class="badge bg-success">
                                                <i class="bi bi-cash-coin"></i> @claim.Status
                                            </span>
                                        }
                                        else if (claim.Status?.Contains("Rejected") == true)
                                        {
                                            <span class="badge bg-danger">
                                                <i class="bi bi-x-circle"></i> @claim.Status
                                            </span>
                                        }
                                        else
                                        {
                                            <span class="badge bg-secondary">@claim.Status</span>
                                        }
                                    </td>
                                    <td>
                                        @if (!string.IsNullOrWhiteSpace(claim.RejectReason))
                                        {
                                            <span class="text-danger">@claim.RejectReason</span>
                                        }
                                        else
                                        {
                                            <span class="text-muted">-</span>
                                        }
                                    </td>
                                </tr>
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>

        <div class="mt-3">
            <p class="text-muted">
                <strong>Total Claims:</strong> @Model.Count() |
                <strong>Total Amount:</strong> R @Model.Sum(c => c.TotalAmount).ToString("N2")
            </p>
        </div>
    }
</div>