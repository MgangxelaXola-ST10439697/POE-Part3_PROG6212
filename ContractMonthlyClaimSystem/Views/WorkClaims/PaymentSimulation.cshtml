@{
    ViewData["Title"] = "Payment Simulation";
}

<div class="container">
    <div class="row justify-content-center">
        <div class="col-md-10">
            <h2 class="mb-4">
                <i class="bi bi-credit-card"></i> Payment Simulation
            </h2>

            <div class="alert alert-warning">
                <i class="bi bi-exclamation-triangle"></i>
                <strong>Simulation Mode:</strong> This is a demonstration page. No actual payments are processed here.
            </div>

            <div class="row">
                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-primary text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-info-circle"></i> About Payment Processing
                            </h5>
                        </div>
                        <div class="card-body">
                            <p>In a production environment, this page would integrate with:</p>
                            <ul>
                                <li><i class="bi bi-check-circle text-success"></i> Banking APIs (EFT, ACH)</li>
                                <li><i class="bi bi-check-circle text-success"></i> Payroll Systems</li>
                                <li><i class="bi bi-check-circle text-success"></i> Electronic Funds Transfer Services</li>
                                <li><i class="bi bi-check-circle text-success"></i> Payment Gateways</li>
                            </ul>
                        </div>
                    </div>
                </div>

                <div class="col-md-6 mb-4">
                    <div class="card shadow-sm h-100">
                        <div class="card-header bg-success text-white">
                            <h5 class="mb-0">
                                <i class="bi bi-wallet2"></i> Worker Features
                            </h5>
                        </div>
                        <div class="card-body">
                            <p>Workers would be able to:</p>
                            <ul>
                                <li><i class="bi bi-eye text-primary"></i> View approved claims ready for payment</li>
                                <li><i class="bi bi-clock-history text-primary"></i> See payment history and dates</li>
                                <li><i class="bi bi-receipt text-primary"></i> Download payment receipts/statements</li>
                                <li><i class="bi bi-bank text-primary"></i> Manage bank account details</li>
                                <li><i class="bi bi-bell text-primary"></i> Receive payment notifications</li>
                            </ul>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm mb-4">
                <div class="card-header bg-info text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-diagram-3"></i> Payment Workflow
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row text-center">
                        <div class="col">
                            <div class="p-3 border rounded bg-light mb-2">
                                <i class="bi bi-file-earmark-check fs-2 text-primary"></i>
                                <p class="mb-0 mt-2 small"><strong>Claim Approved</strong></p>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <i class="bi bi-arrow-right fs-4"></i>
                        </div>
                        <div class="col">
                            <div class="p-3 border rounded bg-light mb-2">
                                <i class="bi bi-person-check fs-2 text-success"></i>
                                <p class="mb-0 mt-2 small"><strong>HR Review</strong></p>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <i class="bi bi-arrow-right fs-4"></i>
                        </div>
                        <div class="col">
                            <div class="p-3 border rounded bg-light mb-2">
                                <i class="bi bi-bank fs-2 text-warning"></i>
                                <p class="mb-0 mt-2 small"><strong>Payment Processing</strong></p>
                            </div>
                        </div>
                        <div class="col-auto d-flex align-items-center">
                            <i class="bi bi-arrow-right fs-4"></i>
                        </div>
                        <div class="col">
                            <div class="p-3 border rounded bg-light mb-2">
                                <i class="bi bi-cash-coin fs-2 text-success"></i>
                                <p class="mb-0 mt-2 small"><strong>Payment Complete</strong></p>
                            </div>
                        </div>
                    </div>
                </div>
            </div>

            <div class="card shadow-sm">
                <div class="card-header bg-dark text-white">
                    <h5 class="mb-0">
                        <i class="bi bi-shield-check"></i> Security Features
                    </h5>
                </div>
                <div class="card-body">
                    <div class="row">
                        <div class="col-md-4">
                            <h6><i class="bi bi-lock-fill text-success"></i> Encryption</h6>
                            <p class="small">All payment data encrypted with industry-standard protocols</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="bi bi-person-check-fill text-success"></i> Authentication</h6>
                            <p class="small">Multi-factor authentication for payment approvals</p>
                        </div>
                        <div class="col-md-4">
                            <h6><i class="bi bi-file-earmark-text-fill text-success"></i> Audit Trail</h6>
                            <p class="small">Complete logging of all payment transactions</p>
                        </div>
                    </div>
                </div>
            </div>

            <div class="mt-4 text-center">
                <a asp-action="MyClaims" class="btn btn-primary btn-lg">
                    <i class="bi bi-arrow-left-circle"></i> Back to My Claims
                </a>
            </div>
        </div>
    </div>
</div>