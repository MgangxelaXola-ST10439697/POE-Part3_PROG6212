@{
    ViewData["Title"] = "Login";
}

<div class="login-container">
    <div class="container">
        <div class="row justify-content-center align-items-center min-vh-100 py-5">
            <div class="col-lg-6 col-md-8">
                <!-- Login Card -->
                <div class="card shadow-lg border-0 rounded-4">
                    <div class="card-body p-5">
                        <!-- Logo and Title -->
                        <div class="text-center mb-4">
                            <div class="login-icon mb-3">
                                <i class="bi bi-file-earmark-text-fill"></i>
                            </div>
                            <h2 class="fw-bold text-primary mb-2">Welcome Back</h2>
                            <p class="text-muted">Contract Monthly Claim System</p>
                        </div>

                        <!-- Success/Error Messages -->
                        @if (TempData["SuccessMessage"] != null)
                        {
                            <div class="alert alert-success alert-dismissible fade show">
                                <i class="bi bi-check-circle-fill me-2"></i>
                                @TempData["SuccessMessage"]
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        @if (ViewBag.Error != null)
                        {
                            <div class="alert alert-danger alert-dismissible fade show">
                                <i class="bi bi-exclamation-triangle-fill me-2"></i>
                                @ViewBag.Error
                                <button type="button" class="btn-close" data-bs-dismiss="alert"></button>
                            </div>
                        }

                        <!-- Login Form -->
                        <form method="post" asp-action="Login">
                            @Html.AntiForgeryToken()

                            <div class="mb-4">
                                <label for="username" class="form-label fw-semibold">
                                    <i class="bi bi-person me-2"></i>Username
                                </label>
                                <input type="text" class="form-control form-control-lg"
                                       id="username" name="username"
                                       placeholder="Enter username" required autofocus />
                            </div>

                            <div class="mb-4">
                                <label for="password" class="form-label fw-semibold">
                                    <i class="bi bi-lock me-2"></i>Password
                                </label>
                                <div class="input-group">
                                    <input type="password" class="form-control form-control-lg"
                                           id="password" name="password"
                                           placeholder="Enter password" required />
                                    <button class="btn btn-outline-secondary" type="button" id="togglePassword">
                                        <i class="bi bi-eye" id="toggleIcon"></i>
                                    </button>
                                </div>
                            </div>

                            <div class="d-grid mb-3">
                                <button type="submit" class="btn btn-primary btn-lg">
                                    <i class="bi bi-box-arrow-in-right me-2"></i>Login
                                </button>
                            </div>
                        </form>

                        <!-- Divider -->
                        <div class="divider my-4">
                            <span class="divider-text">Demo Accounts</span>
                        </div>

                        <!-- Demo Credentials -->
                        <div class="demo-credentials">
                            <div class="row g-3">
                                <!-- Lecturer -->
                                <div class="col-md-6">
                                    <div class="demo-card p-3 bg-light rounded-3">
                                        <i class="bi bi-person-badge fs-4 text-primary mb-2"></i>
                                        <h6 class="fw-bold mb-2">Lecturer (IC)</h6>
                                        <small class="d-block text-muted">Username: <strong>lecturer</strong></small>
                                        <small class="d-block text-muted">Password: <strong>lect123</strong></small>
                                        <button type="button" class="btn btn-sm btn-outline-primary mt-2 w-100 quick-login"
                                                data-username="lecturer" data-password="lect123">
                                            Quick Login
                                        </button>
                                    </div>
                                </div>

                                <!-- Coordinator -->
                                <div class="col-md-6">
                                    <div class="demo-card p-3 bg-light rounded-3">
                                        <i class="bi bi-shield-check fs-4 text-success mb-2"></i>
                                        <h6 class="fw-bold mb-2">Coordinator</h6>
                                        <small class="d-block text-muted">Username: <strong>coordinator</strong></small>
                                        <small class="d-block text-muted">Password: <strong>coord123</strong></small>
                                        <button type="button" class="btn btn-sm btn-outline-success mt-2 w-100 quick-login"
                                                data-username="coordinator" data-password="coord123">
                                            Quick Login
                                        </button>
                                    </div>
                                </div>

                                <!-- Manager -->
                                <div class="col-md-6">
                                    <div class="demo-card p-3 bg-light rounded-3">
                                        <i class="bi bi-person-check fs-4 text-info mb-2"></i>
                                        <h6 class="fw-bold mb-2">Manager</h6>
                                        <small class="d-block text-muted">Username: <strong>manager</strong></small>
                                        <small class="d-block text-muted">Password: <strong>mgr123</strong></small>
                                        <button type="button" class="btn btn-sm btn-outline-info mt-2 w-100 quick-login"
                                                data-username="manager" data-password="mgr123">
                                            Quick Login
                                        </button>
                                    </div>
                                </div>

                                <!-- HR -->
                                <div class="col-md-6">
                                    <div class="demo-card p-3 bg-light rounded-3">
                                        <i class="bi bi-person-gear fs-4 text-warning mb-2"></i>
                                        <h6 class="fw-bold mb-2">HR Admin</h6>
                                        <small class="d-block text-muted">Username: <strong>hr</strong></small>
                                        <small class="d-block text-muted">Password: <strong>hr123</strong></small>
                                        <button type="button" class="btn btn-sm btn-outline-warning mt-2 w-100 quick-login"
                                                data-username="hr" data-password="hr123">
                                            Quick Login
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>

                <!-- Help Text -->
                <div class="text-center mt-4">
                    <p class="text-white small">
                        <i class="bi bi-info-circle me-1"></i>
                        Use the quick login buttons for demo accounts
                    </p>
                </div>
            </div>
        </div>
    </div>
</div>

<style>
    .login-container {
        background: linear-gradient(135deg, #667eea 0%, #764ba2 100%);
        min-height: 100vh;
    }

    .login-icon {
        font-size: 4rem;
        color: #0d6efd;
    }

    .divider {
        display: flex;
        align-items: center;
        text-align: center;
    }

        .divider::before,
        .divider::after {
            content: '';
            flex: 1;
            border-bottom: 1px solid #dee2e6;
        }

    .divider-text {
        padding: 0 1rem;
        color: #6c757d;
        font-size: 0.875rem;
        font-weight: 500;
    }

    .demo-card {
        text-align: center;
        transition: all 0.3s ease;
        cursor: pointer;
        border: 2px solid transparent;
    }

        .demo-card:hover {
            border-color: #0d6efd;
            transform: translateY(-3px);
            box-shadow: 0 4px 8px rgba(0,0,0,0.1);
        }
</style>

<script>
    // Password toggle
    const togglePassword = document.getElementById('togglePassword');
    const passwordInput = document.getElementById('password');
    const toggleIcon = document.getElementById('toggleIcon');

    togglePassword?.addEventListener('click', function() {
        const type = passwordInput.getAttribute('type') === 'password' ? 'text' : 'password';
        passwordInput.setAttribute('type', type);
        toggleIcon.classList.toggle('bi-eye');
        toggleIcon.classList.toggle('bi-eye-slash');
    });

    // Quick login
    document.querySelectorAll('.quick-login').forEach(button => {
        button.addEventListener('click', function() {
            document.getElementById('username').value = this.getAttribute('data-username');
            document.getElementById('password').value = this.getAttribute('data-password');
        });
    });
</script>